
 <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">İhaleler</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>İhale adı</th>
                      <th>Başlangıç tarihi</th>
                      <th>Bitiş tarihi</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @bids.each do |bid| %>
                     <tr>
                      <td><%= link_to bid.name, bid_path(bid.id) %></td>                    
                      <td><%= bid.start_date %></td>                    
                      <td><%= bid.end_date%></td>                    
                     <td><%= link_to '<button type="button" class="btn btn-gradient btn-warning">Düzenle</button>'.html_safe, edit_bid_path(bid.id) %></td>                
                      <td><%= link_to '<button type="button" class="btn btn-gradient btn-danger __web-inspector-hide-shortcut__">Sil</button>'.html_safe, bid_path(bid.id), :confirm => 'Ürünü silmek istediginizden emin misiniz ?', :method => :delete %></td>
                    </tr>    
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <%= link_to '<button type="button" class="btn bg-gradient-primary float-end mb-4 ">Yeni İhale ekle</button>'.html_safe, new_bid_path%>
          </div>
        </div>
        <!-- /.row -->